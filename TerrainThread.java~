class TerrainThread extends java.lang.Thread {
    static int SEQUENTIAL_CUTOFF = 1000;
    int lo; // fields for communicating inputs
    int hi;
    int[] arr;
    int ans = 0; // for communicating result
    SumThread(int[] a, int l, int h) { arr=a; lo=l; hi=h; }
    public void run(){
        if(hi - lo < SEQUENTIAL_CUTOFF) {
            for(int i=lo; i < hi; i++)
                ans += arr[i];
            } else {
            TerrainThread left = new TerrainThread(arr,lo,(hi+lo)/2);
            SumThread right= new TerrainThread(arr,(hi+lo)/2,hi);
            left.start();
            right.run();
            left.join();
            ans = left.ans + right.ans;
            }
            }
            }
    int sum(int[] arr) {
    SumThread t = new TerrainThread(arr,0,arr.length);
    t.run();
    return t.ans;
}